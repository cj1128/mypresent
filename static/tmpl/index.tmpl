<!DOCTYPE html>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
  <title>Slides</title>
  <link rel="icon" href="/static/favicon.ico" type="image/x-icon"/>
  <link type="text/css" rel="stylesheet" href="/static/index.css">
</head>
<body>
  <main>
    {{ define "indexblock" }}
      {{ if . }}
        <section>
          {{ if ne .Name "." }}
            <h2>{{ .Name }}</h2>
          {{ end }}

          {{ if .Slides }}
            <ul>
              {{ range .Slides }}
                <li>
                  <a href="{{ .Path }}">
                    {{ .Name }}
                  </a>
                </li>
              {{ end }}
            </ul>
          {{ end }}

          {{ range .Children }}
            {{ template "indexblock" . }}
          {{ end }}
        {{ end }}
      </section>
    {{ end }}

    <h1>Slides</h1>

    {{ template "indexblock" . }}
  </main>
</body>
</html>
